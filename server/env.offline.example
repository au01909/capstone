# Offline Configuration for Dementia Care Application
# Copy this to .env and configure as needed

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database (still needed for user authentication and metadata)
MONGODB_URI=mongodb://localhost:27017/dementia-care

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Offline AI Services Configuration
# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Alternative: Use a different local LLM service
# LOCAL_LLM_URL=http://localhost:8000
# LOCAL_LLM_MODEL=llama3

# Cleanup Service Configuration
CLEANUP_INTERVAL=0 0 1 * *  # First day of every month at midnight
RETENTION_MONTHS=1           # Keep recordings for 1 month
TIMEZONE=UTC

# File Upload Configuration
MAX_FILE_SIZE=52428800       # 50MB in bytes
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/mp4,audio/ogg
UPLOAD_PATH=./local-storage/audio

# Rate Limiting
RATE_LIMIT_WINDOW=15         # minutes
RATE_LIMIT_MAX=100           # requests per window

# Email Configuration (for notifications - optional in offline mode)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Local Storage Configuration
LOCAL_STORAGE_PATH=./local-storage
CONVERSATIONS_PATH=./local-storage/conversations
AUDIO_PATH=./local-storage/audio

# Security Configuration
BCRYPT_ROUNDS=12

# Development/Testing
DEBUG=offline-ai:*
